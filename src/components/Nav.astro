        <i class="ri-menu-fill"></i>
    </div>
</nav>

<style>
    .nav{
        max-width: var(--max-width);
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2rem 1rem;
    }
    .nav__menu{
        display: flex;
        align-items: center;
        gap: 2rem;
    }
    .logo{
        color: var(--text-dark);
        font-size: 1.5rem;
        font-weight: 600;
    }
    .logo span{
        color: var(--primary-color);
    }
    .nav__link{
        color: var(--text-dark);
        font-weight: 600;
        transition: 0.3s;
    }
    .nav__link:hover{
        color: var(--primary-color);
    }
    .nav__btn{
        padding: 0.75rem 1.5rem;
        color: var(--white);
        background-color: var(--primary-color);
        transition: 0.3s;
        border-radius: 5px;
    }
    .nav__btn:hover{
        background-color: var(--primary-color-dark);
    }
    .menu-toggle{
        display: none;
    }

    @media (max-width:768px ){
        
        .nav__menu {
        display: none;
        flex-direction: column;
        
    }
    .logo{
        margin-left: 2rem;
        color: var(--white);
    }
    .logo span{
        color: var(--white);
    }
    .menu-toggle{
        margin-right: 2rem;
    }
    .nav{
        background-color: var(--primary-color);
        position: fixed;
        width: 100%;
        padding: 1.5rem 0;
        z-index: 1;
    }
    .nav__btn{
        display: none;
    }
    .nav__link{
        color: var(--white);
    }

    .nav__menu.active {
        display: flex;
        position: absolute;
        bottom: 10%;
        background-color: var(--primary-color);
        padding: 2rem 0;
        width: 100%;
        transform: translateY(100%);
        transition: 0.3s;
        z-index: 1;
    }

    .menu-toggle {
        display: block;
        font-size: 2rem;
        cursor: pointer;
        color: var(--white);
        z-index: 1;
    }
    }


</style>

<script>
  const menuToggle = document.querySelector('.menu-toggle') as HTMLElement | null;
const navMenu = document.querySelector('.nav__menu') as HTMLElement | null;
const menuIcon = menuToggle?.querySelector('i') as HTMLElement | null;

if (menuToggle && navMenu && menuIcon) {
    menuToggle.addEventListener('click', () => {
        navMenu.classList.toggle('active');
        const isOpen = navMenu.classList.contains('active');
        menuIcon.setAttribute('class', isOpen ? 'ri-close-line' : 'ri-menu-line');
    });

    document.addEventListener('click', (event) => {
        const target = event.target as Node;
        if (!navMenu.contains(target) && !menuToggle.contains(target)) {
            navMenu.classList.remove('active');
            menuIcon.setAttribute('class', 'ri-menu-line');
        }
    });
}

</script>